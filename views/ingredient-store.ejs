<%- include('common/header',{title:'Stores'}) %>
<div class="container mt-4">
  <% if (ingredientData && ingredientData.results.length > 0) { %>
  <h1 class="mb-4">Search</h1>
  <div class="row">
    <% for (let i = 0; i < ingredientData.results.length; i++) { %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <!-- Display the name of the grocery store -->
          <h5 class="card-title"><%= ingredientData.results[i].name %></h5>
          <!-- Display the formatted address of the grocery store -->
          <p class="card-text">
            <%= ingredientData.results[i].formatted_address %>
          </p>
        </div>
      </div>
    </div>
    <% } %>
  </div>
  <% } else { %>
  <!-- If no results are returned from the API -->
  <p>No results found.</p>
  <% } %>
</div>

<%- include('common/footer') %>

<!-- This file is used to display all possible dish. -->
<%- include('common/header',{title:'List of Recipes'}) %>

<div class="container mt-4">
  <!-- if recipeData has value and hits  -->
  <% if (recipeData && recipeData.hits.length > 0) { %>
  <h1 class="mb-4">
    Showing results for <%= recipeData.q.charAt(0).toUpperCase() +
    recipeData.q.slice(1) %>
  </h1>
  <div class="row">
    <!-- for loop for fetching all the hits of recipes
    and created recipe variable for recipe data
    -->
    <% for (let i = 0; i < recipeData.hits.length; i++) { %> <% const recipe =
    recipeData.hits[i].recipe; %>
    <div class="col-md-4 mb-4">
      <div class="card h-100 card-color">
        <div class="card-body d-flex flex-column justify-content-between">
          <div class="text-center">
            <!-- Center the image -->
            <h5 class="card-title recipe-card-title mb-3">
              <%= recipe.label %>
            </h5>
            <a href="/recipe/<%= recipeData.q %>/<%= i %>">
              <img
                src="<%= recipe.image %>"
                class="img-fluid"
                alt="Recipe Image"
              />
            </a>
          </div>
          <div class="row mt-2">
            <div class="col">
              <p class="card-text mb-2 small">
                <strong>Calories:</strong>
                <!-- to fetch calories value -->
                <span class="calories-value"
                  ><%= recipe.calories.toFixed(2) %> kcal</span
                >
              </p>
            </div>
            <div class="col">
              <p class="card-text mb-2 small">
                <strong>Total Ingredients:</strong>
                <!-- to fetch ingredients value -->
                <span class="ingredients-value"
                  ><%= recipe.ingredients.length %></span
                >
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
  <% } else { %>
  <!-- if no result found -->
  <p>No results found.</p>
  <% } %>
</div>

<%- include('common/footer') %>
